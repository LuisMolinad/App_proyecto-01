<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".EditarEscuela">



    <TextView
        android:id="@+id/textView10"
        android:layout_width="152dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="@string/editar"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />


    <Spinner
        android:id="@+id/spinneridEscuela"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/spinneridCarrera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinneridCarrera"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/nombreEscuela"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nombreEscuela"
        android:textAllCaps="true"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginBottom="308dp"

        android:hint="@string/nombreEscuela"
        android:inputType="textCapCharacters"
        android:textColorHint="#616161"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonEditarEscuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="@color/BotonGuardarr"
        android:text="@string/editar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreEscuela"
        app:layout_constraintVertical_bias="0.79" />

    <Button
        android:id="@+id/botonCancelarEscuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="@color/BotonCancelar"
        android:text="@string/cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botonEditarEscuela"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreEscuela"
        app:layout_constraintVertical_bias="0.79" />


    <!--android:onClick="zzz" Este metodo va dentro del boton-->

    <!--android:onClick="zzz" Este metodo va dentro del boton-->





</androidx.constraintlayout.widget.ConstraintLayout>