<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConsultarMiembroUniversitario">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"></Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consultar miembro universitario"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"></Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/txtIdMiembroUniversitario"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Id miembro universitario"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/idMiembroUniversitario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"></Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/consultar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consultar"
                    android:onClick="consultarMiembroUniversitario"/>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"></Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtIdAsignatura"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Id asignatura"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"></Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtIdUsuario"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Id Usuario"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"></Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Nombre"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"></Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtTipoMiembro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Tipo de miembro"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
